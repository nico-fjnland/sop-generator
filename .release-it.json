{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "tagAnnotation": "Release ${version}",
    "requireCleanWorkingDir": true,
    "requireUpstream": true,
    "push": true
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "releaseNotes": "node scripts/extract-changelog.js ${version}",
    "draft": false,
    "preRelease": false,
    "tokenRef": "GITHUB_TOKEN",
    "comments": {
      "submit": false
    }
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:init": ["npm test -- --watchAll=false --passWithNoTests || true"],
    "after:bump": "echo 'Version bumped to ${version}'"
  }
}

